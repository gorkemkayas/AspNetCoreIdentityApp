@{
    ViewData["Title"] = "PasswordChange";
}

@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}

@model PasswordChangeViewModel

<div class="row">
    <div class="col-md-4 offset-md-4">
        <h1 class="text-center">Update Password</h1>
        <hr />

        @if (TempData["SucceedMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SucceedMessage"]
            </div>
        }

        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
        </div>

        <form asp-controller="Member" asp-action="PasswordChange" method="post">
            <div class="mb-3">
                <label for="OldPassword" class="form-label" asp-for="OldPassword"></label>
                <input asp-for="OldPassword" class="form-control" placeholder="Enter your password...">
                <span class="text-danger" asp-validation-for="OldPassword"></span>
            </div>
            <div class="mb-3">
                <label for="NewPassword" class="form-label" asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" placeholder="Enter your new password...">
                <span class="text-danger" asp-validation-for="NewPassword"></span>
            </div>
            <div class="mb-3">
                <label for="ConfirmNewPassword" class="form-label" asp-for="ConfirmNewPassword"></label>
                <input asp-for="ConfirmNewPassword" class="form-control" placeholder="Confirm your new password...">
                <span class="text-danger" asp-validation-for="ConfirmNewPassword"></span>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary float-end">Update Password</button>
            </div>
        </form>
    </div>
</div>