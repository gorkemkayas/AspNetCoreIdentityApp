
@{
    ViewData["Title"] = "Index";
}

@model UserViewModel

<div class="row">
    <div class="col-md-6 offset-md-3 text-center">
        <user-picture-thumbnail class="rounded-circle mt-4 mb-4" style="width:200px" picture-url="@Model.PictureUrl"></user-picture-thumbnail>
    </div>
</div>

<div class="row">
    <div class="col-md-6 offset-md-3">
<h1 class="text-center">User Informations</h1>
<hr />

<table class="table table-striped">
    <thead>
    <tr>
        <th>Username</th>
        <th>Email</th>
        <th>Phone Number</th>
    </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.UserName</td>
            <td>@Model.Email</td>
            <td>@Model.PhoneNumber</td>
        </tr>
    </tbody>
</table>
    </div>
</div>
